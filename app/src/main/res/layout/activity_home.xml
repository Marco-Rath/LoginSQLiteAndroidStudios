<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" ** Bienvenido * *"
        android:textStyle="italic"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"


        />

    <TextView
        android:id="@+id/etiNombre"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#dbdbdb"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="#10455b"



        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" ** Id Usuario **"
        android:textStyle="italic"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/cajaId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:background="#f2b5ea"
        android:inputType="number"
        android:layout_weight="1"

        />

        <EditText
            android:id="@+id/cajaIdTransferencia"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:hint="Ingrese el Id"
            android:gravity="center"
            android:background="#dbdb"
            android:inputType="number"
            android:layout_weight="1"

            />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" ** Tipo de Transaccion * *"
        android:textStyle="italic"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"


        />
    <Spinner
        android:id="@+id/comboTransacciones"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:entries="@array/combo_type"
        android:prompt="@string/transaction_type_prompt"
        android:background="#dbdbdb"
        />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text=" ** Monto **"
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/cajaMonto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:hint="Ingrese el monto"
        android:gravity="center"
        android:background="#dbdb"
        android:inputType="numberDecimal"

        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" ** Buscar por Fecha **"
        android:textStyle="italic"
        android:textSize="28dp"
        android:textAlignment="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <EditText
            android:id="@+id/cajaFecha"
            android:layout_marginTop="10dp"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:hint="Fecha Seleccionada"
            android:background="#dbdbdb"
            android:gravity="center"
            android:inputType="date"

            />
        <Button
            android:id="@+id/btnBuscarFecha"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="Buscar"
            android:background="@drawable/baseline_calendar_month_24"
            android:layout_marginLeft="10dp"

            />
        <Button
            android:id="@+id/btnBuscar"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#ebb075"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginRight="25dp"
            android:text="Ver Historial"
            android:backgroundTint="#ebb075"
            />
        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Aceptar"
            android:backgroundTint="#ebb075"
            />





    </LinearLayout>
    <Button
        android:id="@+id/btnSaldo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Ver Saldo"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:backgroundTint="#0b5038"
        />
</LinearLayout>